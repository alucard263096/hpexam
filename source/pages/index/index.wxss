/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
} 
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.line-change{
  margin:20rpx;
  padding:20rpx;
  border-radius: 10rpx;
}
.line-change image{
  width: 45rpx;
}
.privacy{
  position: fixed;
  bottom: 5vw;
  width: 750rpx;
  color:#00AAFF;
  font-size: 80%;
}