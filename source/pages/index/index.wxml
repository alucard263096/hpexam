<!--index.wxml-->
<view class="flex-row" style='background:#50BAFF'>
  <image class="userinfo-avatar" src="{{UserInfo.avatarUrl}}" background-size="cover"></image>
  <text class="userinfo-nickname">{{UserInfo.nickName}}</text>
</view>
<view url='/pages/albums/albums' class='flex-row white-block line-change'>
  <view class='flex-1' style='font-size:32rpx;'>日记</view>
  <view class='flex-1 text-right'>
    <!--<image mode='widthFix' style='margin-top:6rpx;' src="http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/3cd93307e5f11403d819d45df5b70145_18040500042.png"></image>-->
  </view>
</view>

<view class='albums flex-row'>
  <view class='album  '>
    <view class='cover'>
      <image class='addcover' bindtap='addNew' src='http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/e99e171642970203f557f402fd03f85a_18040901018.png'></image>
    </view>
    <view class='descriptionplay'>添加相册</view>
  </view>
  <view class='album ' wx:for="{{albums}}" wx:key="k">
    <image class='cover' mode='aspectFill' bindtap='openPhotos' id="{{item.id}}" wx:if="{{item.lastfileinfo.filetype=='P'}}" src='{{uploadpath}}memberphoto/{{item.lastfileinfo.content}}'></image>
    <video class='cover' objectFit='cover' bindtap='openPhotos' show-center-play-btn="{{false}}" id="{{item.id}}" wx:if="{{item.lastfileinfo.filetype=='V'}}" src='{{uploadpath}}memberphoto/{{item.lastfileinfo.content}}' controls='{{false}}'></video>
    <view class='cover'>
      <image class='nullcover' mode='aspectFill' bindtap='openPhotos' id="{{item.id}}" wx:if="{{item.lastfileinfo.id==''}}" src='http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/26c5a6b28bde5ac1515e4275b42a6223_18040901018.png'></image>
    </view>
    <view class='descriptionplay {{item.isdefault=="Y"?"font-primary":""}} '>{{item.name}}</view>
    <view class='edit' bindtap='openAlbum' id="{{item.id}}"></view>
  </view>
</view>

<view style='height:100rpx;'>
</view>

<view class='text-center privacy flex-row white-block'>
  <view class='flex-1 text-center' bindtap='clickPhoto'>
    <view>
      <image class="icon" src="http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/57d54b2fbe83bb0c38861a44d241a2df_18040901056.png"></image>
    </view>
    <view class='text'>照片</view>
  </view>
  <view class='flex-1 text-center' bindtap='clickVideo'>
    <view>
      <image class="icon" src="http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/f2f6e71560e0ef1b2e79426c39115753_18040901039.png"></image>
    </view>
    <view class='text'>视频</view>
  </view>
</view>
