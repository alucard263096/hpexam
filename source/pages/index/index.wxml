<!--index.wxml-->
<view class="flex-row" style='background:#50BAFF'>
  <navigator url='/pages/content/content?keycode=instruction&title=个人中心'>
  <image class="userinfo-avatar" src="{{UserInfo.avatarUrl}}" background-size="cover"></image>
  </navigator>
  <text class="userinfo-nickname">{{UserInfo.nickName}}</text>
</view>

<navigator url='/pages/albums/albums' class='flex-row white-block line-change'>
  <view class='flex-1' style='font-size:32rpx;'>日记</view>
  <view class='flex-1 text-right'>
    <image mode='widthFix' style='margin-top:3rpx;' src="http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/e0e3d610c3fe61e1baffdf5d001f6f18_18041311050.png"></image>
  </view>
</navigator>

<view class='albums flex-row' wx:if="{{showtype=='P'}}">
  <view class='album ' wx:for="{{albums}}" wx:key="k" wx:if="{{item.filetype=='P'}}">
    <image class='cover' mode='aspectFill' bindtap='openFile' id="{{item.id}}" wx:if="{{item.lastfileinfo.filetype=='P'}}" src='{{uploadpath}}memberphoto/{{item.lastfileinfo.content}}'></image>
    <view class='cover' wx:if="{{item.lastfileinfo.id==0}}"  >
      <image class='nullcover' mode='aspectFill' bindtap='openPhotos' id="{{item.id}}" src='http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/26c5a6b28bde5ac1515e4275b42a6223_18040901018.png'></image>
    </view>
  </view>
</view>

<view class='albums flex-row' wx:if="{{showtype=='V'}}">
  <view class='album ' wx:for="{{albums}}" wx:key="k" wx:if="{{item.filetype=='V'}}">
    <image class='cover' mode='aspectFill' bindtap='openFile' id="{{item.id}}"  src='{{uploadpath}}memberphoto/{{item.lastfileinfo.content}}'></image>
    <view class='cover' wx:if="{{item.lastfileinfo.id==0}}"  >
      <image class='nullcover' mode='aspectFill' bindtap='openPhotos' id="{{item.id}}" src='http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/26c5a6b28bde5ac1515e4275b42a6223_18040901018.png'></image>
    </view>
  </view>
</view>

<view style='height:100rpx;'>
</view>

<view class='text-center privacy flex-row white-block'>
  <view class='flex-1 text-center' bindtap='clickPhoto'>
    <view>
      <image class="icon" src="http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/57d54b2fbe83bb0c38861a44d241a2df_18040901056.png"></image>
    </view>
    <view class='text'>照片</view>
  </view>
  <view class='flex-1 text-center' bindtap='clickVideo'>
    <view>
      <image class="icon" src="http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/f2f6e71560e0ef1b2e79426c39115753_18040901039.png"></image>
    </view>
    <view class='text'>视频</view>
  </view>
</view>
