<!--index.wxml-->
<view class="flex-row" style='background:#50BAFF'>
  <navigator url='/pages/content/content?keycode=instruction&title=个人中心'>
    <image class="userinfo-avatar" src="{{UserInfo.avatarUrl}}" background-size="cover"></image>
  </navigator>
  <text class="userinfo-nickname">{{UserInfo.nickName}}</text>
</view>

<navigator url='/pages/albums/albums' class='flex-row white-block line-change'>
  <view class='flex-1' style='font-size:32rpx;'>日记</view>
  <view class='flex-1 text-right'>
    <image mode='widthFix' style='margin-top:3rpx;' src="http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/e0e3d610c3fe61e1baffdf5d001f6f18_18041311050.png"></image>
  </view>
</navigator>

<view class='albums flex-row' wx:if="{{showtype=='P'}}">
  <view class='album ' wx:for="{{files}}" wx:key="k" wx:if="{{item.filetype=='P'}}">
    <image class='cover' mode='aspectFill' bindtap='gotoPhoto' bindlongtap='photoLong' id="{{item.id}}" wx:if="{{item.filetype=='P'}}" src='{{uploadpath}}memberphoto/{{item.content}}'></image>
    <view class='selected' wx:if="{{longtype==true&&item.selected==true}}"></view>
    <view class='unselected' wx:if="{{longtype==true&&item.selected!=true}}"></view>
  </view>
</view>

<view class='albums flex-row' wx:if="{{showtype=='V'}}">
  <view class='album ' wx:for="{{files}}" wx:key="k" wx:if="{{item.filetype=='V'}}">
    <image class='cover' mode='aspectFill' bindtap='gotoPhoto' id="{{item.id}}" bindlongtap='photoLong' src='{{uploadpath}}memberphoto/{{item.cover}}'></image>
    <view class='selected' wx:if="{{longtype==true&&item.selected==true}}"></view>
    <view class='unselected' wx:if="{{longtype==true&&item.selected!=true}}"></view>
  </view>
</view>

<view style='height:120rpx;'>
</view>

<view class='text-center privacy flex-row white-block' wx:if="{{longtype!=true}}">
  <view class='flex-1 text-center' bindtap='clickPhoto' wx:if="{{showtype=='P'}}">
    <view>
      <image class="icon" src="http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/ad1a1b7183951dc89f508a6b6c422144_18041517017.png"></image>
    </view>
    <view class='text'>照片</view>
  </view>
  <view class='flex-1 text-center' bindtap='clickPhoto' wx:if="{{showtype!='P'}}">
    <view>
      <image class="icon" src="http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/03a9dfb805bee4e0dd98448d0692b23e_18041518050.png"></image>
    </view>
    <view class='text' style='color:#333333;'>照片</view>
  </view>
  <view class='flex-1 text-center' bindtap='clickTaking'>
    <view>
      <image class="iconaaa" src="http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/57d54b2fbe83bb0c38861a44d241a2df_18040901056.png"></image>
    </view>
  </view>
  <view class='flex-1 text-center' bindtap='clickVideo' wx:if="{{showtype=='V'}}">
    <view>
      <image class="icon" src="http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/0c485e759453589b882f9509dae8753d_18041517037.png"></image>
    </view>
    <view class='text'>视频</view>
  </view>
  <view class='flex-1 text-center' bindtap='clickVideo' wx:if="{{showtype!='V'}}">
    <view>
      <image class="icon" src="http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/084e7b1573029de0561dc41c5d9a0a29_18041518023.png"></image>
    </view>
    <view class='text' style='color:#333333;'>视频</view>
  </view>
</view>
