<view class='text-center privacy white-block tooltips ' wx:if="{{longtype==true}}">
  <view class='flex-row tooltipsfix' >
    <view class='flex-1' bindtap='moveAlbum'>
      <view>
        <image class='toopsicon' src='http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/3cd93307e5f11403d819d45df5b70145_18041519046.png'></image>
      </view>
      <view>
        加到相册
      </view>
    </view>
    <view class='flex-1' bindtap='download'>
      <view>
        <image class='toopsicon' src='http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/c26be60cfd1ba40772b5ac48b95ab19b_18041521022.png'></image>
      </view>
      <view>
        下载
      </view>
    </view>
    <view class='flex-1'>
      <view>
        <button class='toopsicon btntoopsicon' open-type="share"></button>
      </view>
      <view>
        分享
      </view>
    </view>
    <view class='flex-1' bindtap='deleteFiles'>
      <view>
        <image class='toopsicon' src='http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/3b1293dbb8eb7c5c401e82fc0323296a_18041520051.png'></image>
      </view>
      <view>
        删除
      </view>
    </view>
    <view class='flex-1' bindtap='cancelLongtype'>
      <view>
        <image class='toopsicon' src='http://applinkupload.oss-cn-shenzhen.aliyuncs.com/alucard263096/mealbum/resource/fda89ed742b7652bf9ff7b71aac77b79_18041520039.png'></image>
      </view>
      <view>
        取消
      </view>
    </view>
  </view>
</view>